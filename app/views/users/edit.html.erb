<% if @user.errors.any? %>
  <%= @user.errors.count %>件のエラーが発生しました
  <ul>
    <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>







<div class="container">
  <div class="row">


    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
    <h2>User info</h2>




<%=form_with model: @user do |user| %>


<div class = "form-group">
<h4>Name</h4>
<%= user.text_field :name %>
</div>

<div class = "form-group">
<h4>Image</h4>
<%= user.file_field :profile_image,accept: "image/*"%>
</div>

<div class = "form-group">
<h4>Introduction</h4>
<%= user.text_field :introduction %>
</div>

<div><%= user.submit "Update User"%></div>
<% end %>









    </div>



  </div>
</div>